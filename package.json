{
  "name": "filters-manger",
  "version": "1.2.0",
  "description": "Filter Manger",
  "main": "main/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "copy": "cp src/lib/assets/filters.json main/lib/assets/filters.json",
    "start": "npm run build && node ./main/lib/index.js",
    "build": "npm run refresh && npm run tsc && npm run copy && npm run doc && npm pack",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "tsc": "tsc -p ./",
    "doc": "npm run doc:html",
    "doc:html": "typedoc --tsconfig tsconfig.json"
  },
  "engines": {
    "node": ">=10"
  },
  "dependencies": {
    "@types/express": "^4.17.11",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.31",
    "sqlite3": "^5.0.2",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@ava/typescript": "^1.1.1",
    "ava": "^3.12.1",
    "eslint": "^7.8.0",
    "jasmine": "^4.5.0",
    "lodash": "^4.17.21",
    "nodemon": "^2.0.7",
    "nyc": "^15.1.0",
    "prettier": "^2.1.1",
    "ts-node": "^9.0.0",
    "tslib": "^2.1.0",
    "typedoc": "^0.20.30",
    "typescript": "4.2"
  },
  "files": [
    "main",
    "!**/*.json",
    "README.md"
  ],
  "ava": {
    "failFast": true,
    "timeout": "60s",
    "typescript": {
      "rewritePaths": {
        "src/": "build/main/"
      }
    },
    "files": [
      "!build/module/**"
    ]
  }
}
